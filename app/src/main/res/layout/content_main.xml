<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--顶部toolBar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar_top_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.07"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/ToolBarMenuStyle"/>

    <!--中间内容显示区域-->
    <com.esri.arcgisruntime.mapping.view.MapView
        android:id="@+id/MapView_center_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.83"
        app:layout_constraintTop_toBottomOf="@id/toolBar_top_container"
        app:layout_constraintBottom_toTopOf="@id/BottomNavigation_bottom_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </com.esri.arcgisruntime.mapping.view.MapView>

    <!--底部导航栏-->
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/BottomNavigation_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:menu="@menu/navigation_bottom_item1"
        app:itemIconTint="@drawable/navigation_bottom_selector"
        app:itemTextColor="@drawable/navigation_bottom_selector">
    </android.support.design.widget.BottomNavigationView>

    <!--定位按钮-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dingwei"
        app:backgroundTint="@color/floatingActionButton"
        app:rippleColor="@color/floatingActionButton_click"
        app:borderWidth="0dp"
        app:elevation="5dp"
        app:pressedTranslationZ="10dp"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@id/BottomNavigation_bottom_container"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="10dp"/>

    <!--缩放地图按钮-->
    <ZoomControls
        android:id="@+id/zoomControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/BottomNavigation_bottom_container"/>

    <!-- 拍照按钮 -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/FloatingToTakePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/takephotos"
        app:layout_constraintBottom_toTopOf="@id/zoomControl"
        app:layout_constraintRight_toRightOf="parent"
        app:fabSize="mini"
        app:backgroundTint="@color/floatTakePhoto"
        app:rippleColor="@color/floatingActionButton_click"
        app:borderWidth="0dp"
        app:elevation="5dp"
        app:pressedTranslationZ="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"/>

    <!-- 录音按钮 -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/takeVoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/microphone"
        app:layout_constraintBottom_toTopOf="@id/FloatingToTakePhoto"
        app:layout_constraintRight_toRightOf="parent"
        app:fabSize="mini"
        app:backgroundTint="@color/floatTakePhoto"
        app:rippleColor="@color/floatingActionButton_click"
        app:borderWidth="0dp"
        app:elevation="5dp"
        app:pressedTranslationZ="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"/>

</android.support.constraint.ConstraintLayout>
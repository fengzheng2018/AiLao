<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawLayout_container"
    tools:context=".MainActivity">

    <!--主界面-->
    <include
        layout="@layout/content_main"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <!--侧边滑动栏-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/navigation_left_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left">
        <include
            android:id="@+id/navigation_left_top_head"
            layout="@layout/navigation_left_head"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <android.support.design.widget.NavigationView
            android:id="@+id/navigation_left_content_item"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.6"
            app:menu="@menu/navigation_left_item"
            app:layout_constraintTop_toBottomOf="@id/navigation_left_top_head"
            app:layout_constraintBottom_toTopOf="@id/navigation_left_bottom_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <include
            android:id="@+id/navigation_left_bottom_button"
            layout="@layout/navigation_left_foot"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/navigation_left_content_item"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.DrawerLayout>